      .d-flex.flex-wrap.mt-5.ml-2

          .card.mx-3.flex-grow-1
            .card-header.card-heading-dark.mb-3 PAYMENT CONTACT
            table.table
                  tr
                    th First Name
                    td=company.p_c_first_name
                  tr
                    th Last Name
                    td=company.p_c_last_name
                  tr
                    th Address
                    td=company.p_c_address
                  tr
                    th Phones
                    td=company.p_c_phones
                  tr
                    th Email
                    td=company.p_c_email

    .col-sm-6
      .d-flex.flex-wrap.mt-5.ml-2

          .card.mx-3.flex-grow-1
            .card-header.card-heading-dark.mb-3 BILLS CONTACT
            table.table
                  tr
                    th First Name
                    td=company.b_c_first_name
                  tr
                    th Last Name
                    td=company.b_c_last_name
                  tr
                    th Address
                    td=company.b_c_address
                  tr
                    th Phones
                    td=company.b_c_phones
                  tr
                    th Email
                    td=company.b_c_email

    .col-sm-6
      .d-flex.flex-wrap.mt-5.ml-2

          .card.mx-3.flex-grow-1
